<Page x:Class="KTReports.deleteRoute"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KTReports"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reporting">
    <Canvas x:Name="deleteRoutePage" Height="441" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Margin="1088,8,-1377,0">
        <Canvas.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform X="-1090"/>
            </TransformGroup>
        </Canvas.RenderTransform>
        <Button Content="Delete" Canvas.Left="930" Canvas.Top="332" Width="94" Height="31"
            Click="deleteRoutebutton"/>
        <ListBox x:Name="routes" Height="283" Canvas.Left="242" Canvas.Top="80" Width="290"/>
        <Button Content="Delete All" Canvas.Left="930" Canvas.Top="284" Width="94" Height="31" Click="deleteAllRoutes"/>
    </Canvas>

</Page>
      

