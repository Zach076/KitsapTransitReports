<Window x:Class="KTReports.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KTReports"
        mc:Ignorable="d"
        Title="Kitsap Transit Reports" Height="700" Width="1100" MinWidth="50" MinHeight="30"
    >
    <StackPanel>
        <DockPanel>
            <Menu>
                <MenuItem Header="_File">
                    <MenuItem Header="Import Files" Margin="0,5,0,5"/>
                    <MenuItem Header="Open Part Reports" Margin="0,5,0,5"/>
                    <MenuItem Header="Close" 
                              Margin="0,5,0,5"
                              Click="Close_Clicked"/>
                </MenuItem>
                <MenuItem Header="Create Report" Margin="0,5,0,5"/>
                <MenuItem Header="View Visualizations" Margin="0,5,0,5"/>
                <MenuItem Header="Update Route Info" Margin="0,5,0,5"/>
                <MenuItem Header="Help" Margin="0,5,0,5"/>
            </Menu>
        </DockPanel>
        <Grid>

        </Grid>
    </StackPanel>
</Window>
