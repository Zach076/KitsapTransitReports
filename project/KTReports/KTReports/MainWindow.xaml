<Window x:Class="KTReports.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KTReports"
        mc:Ignorable="d"
        Title="Kitsap Transit Reports" Height="500" Width="1100" MinWidth="50" MinHeight="30" Visibility="Visible"
    >
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Menu>
                <MenuItem Header="_File">
                    <MenuItem Header="Import Files" 
                              Margin="0,5,0,5"
                              Click="ImportFile"/>
                    <MenuItem Header="Import Route Data"
                              Margin="0,5,0,5"
                              Click="ImportRoutes"/>
                    <MenuItem Header="Close" 
                              Margin="0,5,0,5"
                              Click="CloseClicked"/>
                </MenuItem>
                <MenuItem Header="Create Report"
                          Margin="0,5,0,5"
                          Click="OpenReportsPage"/>
                <MenuItem Header="View Visualizations" Margin="0,5,0,5"/>
                <MenuItem Header="Update Route Info" 
                          Margin="0,5,0,5"
                          Click="editPage"/>
                <MenuItem Header="Help" Margin="0,5,0,5"/>
            </Menu>
        </DockPanel>

        <Grid>
            <Frame x:Name="Main"/>
        </Grid>
        <Canvas x:Name="URI" Height="299" VerticalAlignment="Top" Width="176" Margin="0,142,0,0"/>
        <ListBox x:Name="listRoutes" Width="250" Height="300" RenderTransformOrigin="0.5,0.5" Visibility="Hidden">
            <ListBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="-150"/>
                </TransformGroup>
            </ListBox.RenderTransform>
        </ListBox>
        <ListBox x:Name="listAttributes" Height="300" VerticalAlignment="Top" Width="250" RenderTransformOrigin="0.5,0.5" Visibility="Hidden">
            <ListBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform Y="69"/>
                </TransformGroup>
            </ListBox.RenderTransform>
        </ListBox>
        <TextBox x:Name="newField" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" RenderTransformOrigin="0.5,0.5" FontSize="14" Visibility="Hidden">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform Y="200" X="100"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button x:Name="updateButton" Content="Update" Height="20" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.5,0.5" Click="update" Visibility="Hidden">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform Y="350"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </DockPanel>
</Window>
